//- views/rating-page.jade
html
  head
    title!= title
  body
    h1 热烈欢迎用户: #{username},请您为以下电影打分:
    form(action='/submituserscore', method='post')
      input(type='hidden', name='userid', value=userid)
      table(cellpadding="10" cellspacing="5" style="width: 100%; border-collapse: collapse;")
         tr
           - for(var i = 0; i < selectedMovies.length; i++)
            td
              p #{selectedMovies[i].moviename}
              input(type='hidden', name='movieid', value=selectedMovies[i].movieid)
              img(src=selectedMovies[i].picture, width="120", height="180")
              br
              select(name='moviescore')
                option(value=1) 1
                option(value=2) 2
                option(value=3) 3
                option(value=4) 4
                option(value=5) 5
             - if((i + 1) % 5 == 0)
              tr
        input(type='submit', value='提交')