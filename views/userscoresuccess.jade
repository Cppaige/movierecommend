      .success-container {
        text-align: center;
        max-width: 500px;
        width: 100%;
        animation: fadeInUp 0.6s ease-out;
      }
      h1 {
        font-size: 32px;
        font-weight: 400;
        margin-bottom: 16px;
        color: #1a1a1a;
        line-height: 1.4;
